{
    "builders": [
        {
            "vm_name": "{{user `vmname`}}-i3",
            "type": "virtualbox-iso",
            "output_directory": ".\\output-i3\\",
            "iso_checksum": "sha1:{{user `i3-image-hash`}}",
            "iso_url": "{{user `i3-image`}}",
            "guest_os_type": "ArchLinux_64",
            "http_directory": "http",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait27><wait2><leftSuperOn>i<leftSuperOff><wait4>",
                "<leftAltOn><wait>e<up><up>n<wait>n<wait>n<wait>n<wait><leftAltOff>",
                "dev<tab><tab>devbox<tab>1234<tab>1234<tab><spacebar><tab><spacebar><leftAltOn>n<wait1>i<wait>i",
                "<wait120>d<leftAltOff>",
                "<leftSuperOn><enter><leftSuperOff><wait1>shutdown now<enter>"
            ],
            "disk_size": "{{user `disksize`}}",
            "hard_drive_interface": "sata",
            "communicator": "none",
            "guest_additions_mode": "disable",
            "virtualbox_version_file": "",
            "shutdown_command": "sudo shutdown now",
            "headless": "false",
            "bundle_iso": true,
            "cpus": 8,
            "memory": "{{user `memory`}}",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--vram",
                    "128"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--clipboard-mode",
                    "bidirectional"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--draganddrop",
                    "bidirectional"
                ]
            ]
        }
    ]
}
{
    "variables": {
        "disksize": "20480"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_checksum": "sha1:0d9aa6b59f72c2d32749333520af8ef661e0a36b",
            "iso_url": "https://osdn.net/frs/redir.php?m=dotsrc&f=%2Fstorage%2Fg%2Fm%2Fma%2Fmanjaro-community%2Fi3%2F20.0.3%2Fminimal%2Fmanjaro-i3-20.0.3-minimal-200606-linux56.iso",
            "guest_os_type": "ArchLinux_64",
            "http_directory": "http",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait30><right><enter><wait2><leftSuperOn>i<leftSuperOff><wait4>",
                "<leftAltOn><wait>e<up><up>n<wait>n<wait><leftAltOff><leftAltOn>n<leftAltOff><wait><tab><tab><tab><wait><spacebar><leftAltOn>n<leftAltOff><wait>",
                "{{user `username`}}<tab><tab>{{user `username`}}box<tab>1234<tab>1234<tab><spacebar><tab><spacebar><leftAltOn>n<wait1>i<wait>i",
                "<wait120>d<leftAltOff>",
                "<leftSuperOn><enter><leftSuperOff><wait1>shutdown now<enter>"
            ],
            "disk_size": "{{user `disksize`}}",
            "hard_drive_interface": "sata",
            "communicator": "none",
            "guest_additions_mode": "disable",
            "virtualbox_version_file": "",
            "shutdown_command": "sudo shutdown now",
            "headless": "false",
            "bundle_iso": true,
            "cpus": 8,
            "vm_name": "{{user `baseimage`}}",
            "memory": 40000,
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--vram",
                    "128"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--clipboard-mode",
                    "bidirectional"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--draganddrop",
                    "bidirectional"
                ]
            ]
        }
    ]
}
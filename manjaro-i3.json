{
    "variables":{
        "name": "dev",
        "disksize": "20480",
        "vmname": "cool11111"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_checksum": "sha1:0d9aa6b59f72c2d32749333520af8ef661e0a36b",
            "iso_url":  "https://osdn.net/frs/redir.php?m=dotsrc&f=%2Fstorage%2Fg%2Fm%2Fma%2Fmanjaro-community%2Fi3%2F20.0.3%2Fminimal%2Fmanjaro-i3-20.0.3-minimal-200606-linux56.iso",
            "guest_os_type": "ArchLinux_64",
            "http_directory": "http",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait23><right><enter><wait><leftSuperOn>i<leftSuperOff><wait4>",
                "<leftAltOn><wait>w<wait>w<wait><leftAltOff>e<down><down><down><down><down><down><leftAltOn>w<leftAltOff><wait><tab><tab><tab><wait><spacebar><leftAltOn>w<leftAltOff><wait>",
                "{{user `name`}}<tab><tab>{{user `name`}}box<tab>1234<tab>1234<tab><spacebar><tab><spacebar><leftAltOn>w<wait1>i<wait>i",
                "<wait2m>e<leftAltOff>",
                "<leftSuperOn><enter><leftSuperOff>",
                "curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
                "sudo bash ./en<tab><enter>"
            ],
            "disk_size": "{{user `disksize`}}",
            "hard_drive_interface": "sata",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "20m",
            "shutdown_command": "sudo shutdown now",
            "keep_registered": true,
            "headless": "false",
            "bundle_iso": true,
            "cpus": 8,
            "vm_name": "{{user `vmname`}}",
            "memory": 40000,
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--vram", "128" ],
                [ "modifyvm", "{{.Name}}", "--clipboard-mode", "bidirectional" ],
                [ "modifyvm", "{{.Name}}", "--draganddrop", "bidirectional" ]
           ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/install-virtualbox.sh"
        },
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/setup-manjaro.sh"
        }
    ]
}
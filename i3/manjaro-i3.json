{
    "builders": [
        {
            "vm_name": "{{user `vmname`}}-temp1",
            "type": "virtualbox-iso",
            "output_directory": "./i3/output-i3/",
            "iso_checksum": "sha1:{{user `i3-image-hash`}}",
            "iso_url": "{{user `i3-image`}}",
            "guest_os_type": "ArchLinux_64",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait30><wait4><leftSuperOn>i<leftSuperOff><wait6>",
                "<leftAltOn><wait3>e<up><up>n<wait3>n<wait3>n<wait3>n<wait3><leftAltOff>",
                "dev<tab><tab>devbox<tab>1234<tab>1234<tab><spacebar><tab><spacebar><leftAltOn>n<wait3>i<wait3>i",
                "<wait140>d<leftAltOff>",
                "<leftSuperOn><enter><leftSuperOff><wait3>shutdown now<enter>"
            ],
            "disk_size": "{{user `disksize`}}",
            "hard_drive_interface": "sata",
            "communicator": "none",
            "guest_additions_mode": "disable",
            "virtualbox_version_file": "",
            "shutdown_command": "sudo shutdown now",
            "headless": "false",
            "bundle_iso": true,
            "cpus": 8,
            "memory": "{{user `memory`}}",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--vram",
                    "128"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--clipboard-mode",
                    "bidirectional"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--draganddrop",
                    "bidirectional"
                ]
            ]
        }
    ]
}
{
    "variables": {
        "name": "dev",
        "disksize": "{{user `disksize`}}"
    },
    "builders": [
        {
            "vm_name": "{{user `vmname`}}-temp2",
            "type": "virtualbox-ovf",
            "source_path": "./i3/output-i3/{{user `vmname`}}-temp1.ovf",
            "output_directory": "./i3/output-updated/",
            "ssh_username": "dev",
            "ssh_password": "{{user `password`}}",
            "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown now",
            "boot_command": [
                "<wait24><leftSuperOn><enter><leftSuperOff><wait3>",
                "systemctl start sshd.service<enter><wait3>{{user `password`}}<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./scripts/update-manjaro.sh",
            "destination": "~/update-manjaro.sh"
        },
        {
            "type": "shell",
            "inline": "bash ~/update-manjaro.sh {{user `password`}} {{user `dotfiles-git`}}"
        }
    ]
}
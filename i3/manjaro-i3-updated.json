{
    "builders": [
        {
            "vm_name": "{{user `vmname`}}-temp2",
            "type": "virtualbox-ovf",
            "keep_registered": true,
            "source_path": "./i3/output-i3/{{user `vmname`}}-temp1.ovf",
            "output_directory": "./i3/output-updated/",
            "ssh_username": "dev",
            "ssh_password": "{{user `password`}}",
            "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown now",
            "boot_command": [
                "<wait60><leftSuperOn><enter><leftSuperOff><wait5>",
                "systemctl start sshd.service<enter><wait5>{{user `password`}}<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./scripts/manjaro-update.sh",
            "destination": "~/manjaro-update.sh"
        },
        {
            "type": "shell",
            "inline": "bash ~/manjaro-update.sh {{user `password`}} {{user `dotfiles-git`}}"
        }
    ]
}
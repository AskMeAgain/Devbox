{
    "builders": [
        {
            "vm_name": "{{user `vmname`}}",
            "type": "virtualbox-ovf",
            "keep_registered": true,
            "source_path": "./i3/output-updated/{{user `vmname`}}-temp2.ovf",
            "output_directory": "./i3/output-additions",
            "ssh_username": "{{user `user-name`}}",
            "ssh_password": "{{user `password`}}",
            "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown now",
            "boot_command": [
                "<wait24><leftSuperOn><enter><leftSuperOff><wait3>",
                "systemctl start sshd.service<enter><wait2>{{user `password`}}<enter>"
            ],
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--monitorcount",
                    "{{user `monitor-count`}}"
                ],
                [
                    "setextradata",
                    "{{.Name}}",
                    "GUI/SuppressMessages",
                    "all"
                ],
                [
                    "setextradata",
                    "{{.Name}}",
                    "GUI/Fullscreen",
                    "true"
                ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./scripts/manjaro-additions.sh",
            "destination": "~/manjaro-additions.sh"
        },
        {
            "type": "shell",
            "inline": "bash ~/manjaro-additions.sh {{user `password`}} {{user `dotfiles-git`}} {{user `user-name`}}"
        }
    ]
}
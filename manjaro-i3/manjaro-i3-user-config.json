{
    "builders": [
        {
            "vm_name": "{{user `vmname`}}",
            "type": "virtualbox-ovf",
            "keep_registered": true,
            "source_path": "./packer_cache/outputs/manjaro-i3/os/{{user `vmname`}}-temp1.ovf",
            "output_directory": "./packer_cache/outputs/manjaro-i3/user-config/",
            "ssh_username": "{{user `user-name`}}",
            "ssh_password": "{{user `password`}}",
            "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown now",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--monitorcount",
                    "{{user `monitor-count`}}"
                ],
                [
                    "setextradata",
                    "{{.Name}}",
                    "GUI/SuppressMessages",
                    "all"
                ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "ansible-local",
            "playbook_file": "./manjaro-i3/ansible.yml",
            "extra_arguments": [
                "-e",
                "\"ansible_sudo_pass={{ user `password`}}\""
            ]
        }
    ]
}
{
    "builders": [
        {
            "vm_name": "{{user `vmname`}}",
            "type": "virtualbox-ovf",
            "keep_registered": true,
            "source_path": "./packer_cache/outputs/manjaro-i3/{{user `vmname`}}-temp1.ovf",
            "output_directory": "./manjaro-i3/output-additions",
            "ssh_username": "{{user `user-name`}}",
            "ssh_password": "{{user `password`}}",
            "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown now",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--monitorcount",
                    "{{user `monitor-count`}}"
                ],
                [
                    "setextradata",
                    "{{.Name}}",
                    "GUI/SuppressMessages",
                    "all"
                ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./manjaro-i3/manjaro-additions.sh",
            "destination": "~/manjaro-additions.sh"
        },
        {
            "type": "shell",
            "inline": "bash ~/manjaro-additions.sh {{user `password`}} {{user `dotfiles-git`}} {{user `user-name`}}"
        }
    ]
}
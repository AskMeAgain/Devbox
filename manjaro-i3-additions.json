{
    "variables": {
        "name": "dev",
        "disksize": "20480"
    },
    "builders": [
        {
            "vm_name": "{{user `vmname`}}",
            "keep_registered": true,
            "type": "virtualbox-ovf",
            "source_path": "./output-virtualbox-iso/{{user `baseimage`}}.ovf",
            "ssh_username": "{{user `username`}}",
            "ssh_password": "1234",
            "shutdown_command": "echo '1234' | sudo -S shutdown now",
            "boot_command": [
                "<wait15><leftSuperOn><enter><leftSuperOff><wait2>",
                "sudo -s<enter><wait>1234<enter><wait2>",
                "echo 'X11Forwarding yes' >> /etc/ssh/sshd_config<enter><wait2>",
                "echo 'X11UseLocalhost no' >> /etc/ssh/ssh_config<enter><wait2>",
                "exit<enter><wait2>",
                "systemctl start sshd.service<enter><wait2>1234<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./scripts/",
            "destination": "~/Downloads"
        },
        {
            "type": "shell",
            "inline": "cd ~/Downloads/ && bash ./setup.sh {{user `background-image`}}"
        },
        {
            "type": "shell",
            "inline": "yadm clone {{user `dotfiles-git`}}"
        },
        {
            "type": "shell",
            "inline": "echo 'exec --no-startup-id feh --bg-fill ~/wallpaper.jpg' >> ~/.i3/config"
        }
    ]
}